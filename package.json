{
  "name": "iobroker.neeo",
  "version": "1.0.1",
  "description": "ioBroker Adapter for NEEO Remote Control",
  "author": {
    "name": "tom",
    "email": "teuber@magictom.ch"
  },
  "homepage": "https://github.com/magictom74/ioBroker.neeo",
  "license": "MIT",
  "keywords": [
    "neeo",
    "ioBroker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/magictom74/ioBroker.neeo"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3",
    "bonjour": "^3.3.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/dev-server": "^0.7.8",
    "@iobroker/testing": "^5.0.4",
    "@tsconfig/node20": "^20.1.6",
    "@types/bonjour": "^3.5.13",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "mocha": "^11.7.1",
    "proxyquire": "^2.1.3",
    "sinon": "^21.0.0",
    "sinon-chai": "^3.7.0"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "build": "tsc && mkdir -p lib && cp -ru build/lib/* lib/ && cp -u build/main.js main.js",
    "dev": "npm run build && dev-server watch default",
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/magictom74/ioBroker.neeo/issues"
  },
  "readmeFilename": "README.md"
}
